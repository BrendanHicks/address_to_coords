<div class="page-header">
  <h1>Coordinates Lookup</h1>
</div>

<div class = "container">
  <div class="row">
    <div class="col-md-8">
      <form role = "form">
        <div class = "form-group">
        Location:<input type="text" name="location">
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
      </form>
    </div>
  </div>


  <div class="row">
    <div class="col-md-8">

      <dl>
        <dt>Address:</dt>
        <dd><%= @address %></dd>

        <dt>URL Safe Address:</dt>
        <dd><%= @url_safe_address %></dd>

        <dt>Latitude:</dt>
        <dd><%= @latitude %></dd>

        <dt>Longitude:</dt>
        <dd><%= @longitude %></dd>
      </dl>

    </div>
  </div>
</div>
